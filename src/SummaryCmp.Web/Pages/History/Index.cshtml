@page
@model SummaryCmp.Web.Pages.History.IndexModel
@{
    ViewData["Title"] = "History";
}

<h1 class="text-3xl font-bold mb-2">Comparison History</h1>
<p class="text-base-content/70 mb-6">View your past comparisons and their results.</p>

@if (!Model.Sessions.Any())
{
    <div role="alert" class="alert bg-base-200 text-base-content">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="h-6 w-6 shrink-0 stroke-current opacity-60">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>No comparisons yet. <a asp-page="/Index" class="link link-primary">Start a new comparison</a>.</span>
    </div>
}
else
{
    <div class="overflow-x-auto">
        <table class="table table-zebra">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Text Preview</th>
                    <th>Providers</th>
                    <th>Status</th>
                    <th>Winner</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in Model.Sessions)
                {
                    var winner = session.SummaryResults.FirstOrDefault(r => r.UserRank == 1);
                    <tr>
                        <td class="whitespace-nowrap">@session.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="max-w-xs truncate">@(session.InputText.Length > 100 ? session.InputText.Substring(0, 100) + "..." : session.InputText)</td>
                        <td>@session.SummaryResults.Count providers</td>
                        <td>
                            @if (session.IsRanked)
                            {
                                <span class="badge badge-success">Ranked</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pending</span>
                            }
                        </td>
                        <td>
                            @if (winner != null)
                            {
                                <span class="badge badge-primary">@winner.ProviderModel.DisplayName</span>
                            }
                            else
                            {
                                <span class="text-base-content/50">-</span>
                            }
                        </td>
                        <td>
                            @if (session.IsRanked)
                            {
                                <a asp-page="/Results" asp-route-id="@session.Id" class="btn btn-sm btn-outline btn-primary">View</a>
                            }
                            else
                            {
                                <a asp-page="/Compare" asp-route-id="@session.Id" class="btn btn-sm btn-primary">Rank</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<a asp-page="/Index" class="btn btn-primary mt-6">New Comparison</a>
