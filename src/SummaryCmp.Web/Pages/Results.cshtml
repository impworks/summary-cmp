@page "{id:guid}"
@model SummaryCmp.Web.Pages.ResultsModel
@{
    ViewData["Title"] = "Results";
}

<h1 class="text-3xl font-bold mb-2">Results</h1>
<p class="text-base-content/70 mb-6">Here are the summaries ranked by your preference, with provider names revealed.</p>

<div class="card bg-base-200 mb-6">
    <div class="card-body">
        <h2 class="card-title">Original Text</h2>
        <p class="whitespace-pre-wrap max-h-48 overflow-y-auto">@Model.Session?.InputText</p>
    </div>
</div>

<h3 class="text-xl font-semibold mb-4">Your Rankings</h3>

<div class="space-y-4 mb-6">
    @foreach (var result in Model.Results)
    {
        var borderClass = result.UserRank switch
        {
            1 => "border-l-4 border-l-success",
            2 => "border-l-4 border-l-primary",
            3 => "border-l-4 border-l-warning",
            _ => "border-l-4 border-l-base-300"
        };
        var badgeClass = result.UserRank switch
        {
            1 => "badge-success",
            2 => "badge-primary",
            3 => "badge-warning",
            _ => "badge-neutral"
        };

        <div class="card bg-base-100 shadow-md @borderClass">
            <div class="card-body">
                <div class="flex flex-wrap justify-between items-center gap-2 mb-2">
                    <div class="flex items-center gap-2">
                        <span class="badge @badgeClass text-lg px-3 py-3">#@result.UserRank</span>
                        <div>
                            <span class="font-bold">@result.ProviderModel.DisplayName</span>
                            <span class="text-base-content/60 text-sm ml-1">(@result.ProviderModel.ProviderKey / @result.ProviderModel.ModelId)</span>
                        </div>
                    </div>
                    <div class="flex gap-2">
                        @if (Model.Prices.TryGetValue(result.Id, out var price) && price.HasValue)
                        {
                            <span class="badge badge-accent">$@price.Value.ToString("F6")</span>
                        }
                        <span class="badge badge-info">@result.DurationMs ms</span>
                    </div>
                </div>
                @if (result.IsSuccess)
                {
                    <p class="whitespace-pre-wrap">@result.SummaryText</p>
                }
                else
                {
                    <p class="text-error">
                        <strong>Error:</strong> @result.ErrorMessage
                    </p>
                }
            </div>
        </div>
    }
</div>

<div class="flex flex-wrap gap-2">
    <a asp-page="/Index" class="btn btn-primary">New Comparison</a>
    <a asp-page="/History/Index" class="btn btn-outline">View History</a>
    <a asp-page="/Leaderboard" class="btn btn-outline">View Leaderboard</a>
</div>
